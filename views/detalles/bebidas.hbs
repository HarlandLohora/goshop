<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{url}}" class="img-fluid rounded-start" alt="No existe">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{nombre}}</h5>
        <p class="card-text">{{descripcion}}</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        <a href="/bebidas/editar/{{_id}}">
          <button type="button" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Editar</button>
        </a>
        <a href="/bebidas/eliminar/{{_id}}">
          <button type="button" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i> Eliminar</button>
        </a>
      </div>
    </div>
  </div>
</div>