<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
<style>
    *{
        margin: 0;
        padding:0;
    }
    .container-registro{
        width: 100vw;
        height: 100vh;
        display: flex;
    }
    .container-registro-img{
        width: 70vw;
        height: 100vh;
        background-image: url("/images/img.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }
    .container-registro-form{
        width: 30vw;
        height: 100vh;
        display: flex;
        justify-content: center;
    }

    form{
        width: 80%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .copy{
        color: #333;
        margin-top: 12px; 
        text-align: center;
    }
</style>

<div class="container-registro">
    <div class="container-registro-form">
        <form action="/login" method="post">
            <h2>Acceder</h2>
            <div class="mb-3">
                <input name="email" type="email" class="form-control" placeholder="Ingresa tu correo" required minlength="4" value="harland@ironhack.com">
            </div>
            <div class="mb-3">
                <input name="password" type="password" class="form-control" placeholder="Ingresa tu contrasena" required minlength="4" value="ironhack">
            </div>
            {{#if checkInfo}}
                <div class="alert alert-danger d-flex align-items-center" role="alert"> 
                    <div>
                    <i class="bi bi-exclamation-octagon-fill"></i> {{textError}}
                    </div>
                </div>
            {{/if}}

            <div class="mb-3">
                <p>¿Aun no tienes una cuenta? <a href="/registro">Registrate</a></p>
            </div>

             <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">Ingresar</button>
            </div>
            <p class="copy">GoShop © 2022</p>
        </form>
    </div>
    <div class="container-registro-img"></div>
</div>